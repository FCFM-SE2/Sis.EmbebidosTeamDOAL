# Sis.EmbebidosTeamDOAL
MyFirstApp
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:id="@+id/btnAceptar"
        android:layout_below="@+id/TxtPass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:onClick="Valida" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TxtPass"
        android:layout_below="@+id/TxtUser"
        android:layout_toRightOf="@+id/User"
        android:layout_toEndOf="@+id/User" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/TxtUser"
        android:layout_alignTop="@+id/User"
        android:layout_alignRight="@+id/btnAceptar"
        android:layout_alignEnd="@+id/btnAceptar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Usuario:"
        android:id="@+id/User"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/TxtUser"
        android:layout_toStartOf="@+id/TxtUser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ContraseÃ±a:"
        android:id="@+id/textView2"
        android:layout_below="@+id/TxtUser"
        android:layout_toLeftOf="@+id/TxtPass"
        android:layout_toStartOf="@+id/TxtPass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Verifica"
        android:id="@+id/Ver"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
